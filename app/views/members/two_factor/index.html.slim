- if current_member.two_factor_enabled?
  p ENABLED -- Two Factor Authentication is currently on
  = link_to 'Disable two-factor authentication', disable_two_factor_settings_path, method: :post, class: 'button button-primary'
- else
  p DISABLED -- Two Factor Authentication is currently off
  = link_to 'Enable two-factor authentication', two_factor_settings_path, method: :post, class: 'button button-primary'

table
  thead
